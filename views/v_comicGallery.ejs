            <a href="/comic/show/<%=comic.id%>">
                <div class="align-middle align-items-center justify-content-center" style="height:300px">
                    <img style="max-height: 300px;" src="\public\uploads\<%=comic.savedFolder%>\<%=comic.coverImage%>" class="img-responsive" alt="Image">
                </div>
            </a>
